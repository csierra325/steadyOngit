{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "noEmitOnError": true,
        "lib": [
            "es6",
            "dom",
            "es2015.iterable"
        ],
        "baseUrl": ".",
        "paths": {
            "@components/*": ["components/*", "components/index"],
            "@core/*": ["core/*", "core/index"],
            "@models/*": ["models/*", "models/index"],
            "@modules/*": ["modules/*"],
            "@services/*": ["services/*", "services/index"],
            "@mock_data/*": ["tests/mock_data/*", "tests/mock_data/index"],
            "@environments/*": ["environments/*", "environments/environment"]
        }
    }
}
